docker buildx build --tag mgkahn/capsuletech.kahn --platform linux/amd64 --file Dockerfile.Kahn --no-cache .





tar -xvf /root/OpenJDK8U-jdk_x64_linux_hotspot_8u362b09.tar.gz -C /usr/lib/jvm
# update-alternatives --install /usr/bin/javac javac /usr/lib/jvm/jdk8u362-b09/bin/javac 1
