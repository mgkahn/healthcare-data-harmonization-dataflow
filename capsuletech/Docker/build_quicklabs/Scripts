COPY ./OpenJDK8U-jdk_x64_linux_hotspot_8u362b09.tar.gz /root
WORKDIR /root
RUN mkdir -p /usr/lib/jvm && tar -xvf /root/OpenJDK8U-jdk_x64_linux_hotspot_8u362b09.tar.gz -C /usr/lib/jvm \
&& rm -f -- /usr/bin/java \
&& ln -s /usr/lib/jvm/jdk8u362-b09/bin/java /usr/bin/java

&& wget -qO - https://adoptopenjdk.jfrog.io/adoptopenjdk/api/gpg/key/public | apt-key add - \
&& add-apt-repository --yes https://adoptopenjdk.jfrog.io/adoptopenjdk/deb/ \
&& apt-get update -y &&  apt install -y adoptopenjdk-8-hotspot
COPY ./OpenJDK8U-jdk_x64_linux_hotspot_8u362b09.tar.gz /root
